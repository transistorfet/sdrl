#
# Towers of Hanoi implemented recursively for 3 pegs
#

set(move-tower, code(
	set(list(from, to, discs), $(_))
	if (=($(discs), 0),
		code(
			move-disc($(from), $(to))),
		code(
			move-tower($(from), -(6, $(from), $(to)), -($(discs), 1))
			move-disc($(from), $(to))
			move-tower(-(6, $(from), $(to)), $(to), -($(discs), 1))))))

set(move-disc, code(
	set(list(from, to), $(_))
	print("Moved disc from ", $(from), " to ", $(to))))


